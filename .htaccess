# Laravel - .htaccess para la raíz del proyecto
# Redirige todas las peticiones a la carpeta public/

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si la petición NO es para la carpeta public y NO es un archivo/carpeta que existe
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir a public/ manteniendo la URI original
    RewriteRule ^(.*)$ public/$1 [L,QSA]
    
    # Redirigir la raíz también a public/
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ public/ [L]
</IfModule>

# Proteger archivos sensibles (archivos que empiezan con punto)
<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Proteger .env específicamente
<Files .env>
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>
